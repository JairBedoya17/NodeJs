</ul>

    <div class="card">

        <div class="card-header">
            <ul class="nav nav-pills w-100">
                            <li class="nav-pill active">
                    <a class="nav-link">Resultado</a>
                </li>

            </ul>
        </div>
        <div class="card-body">

            <% if(view1.length) { %>
                <table class="table">
                    <thead>
