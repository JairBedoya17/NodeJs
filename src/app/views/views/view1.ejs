                            <th scope="col">#</th>
                            <th width="50px">Nombre</th>
                            <th width="50px">Album</th>
                            <th scope="col">Artista</th>
	                    <th scope="col">Apodo</th>
			    <th scope="col">Veces de reproducci√≥n</th>
			    <th scope="col">Cantidad de usuarios</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i< view1.length; i++) { %>
                            <tr>
                                <!--<th scope="row"><%= (i+1) %></th>-->
                                <td>
                                    <%= view1[i].id%>
                                </td>
                                <td>
                                    <%= view1[i].name%>
                                </td>
                                <td>
                                    <%= view1[i].Nombre_Albumes%>
                                </td>
                                <td>
                                    <%= view1[i].Nombre_Artista%>
                                </td>
				   <td>
                                    <%= view1[i].nombre_artistico%>
                                </td>
                                <td>
                                    <%= view1[i].Cantidad_Escuchadas%>
                                </td>
                                <td>
                                    <%= view1[i].Cantidad_User%>
                                </td>

                                <!--<td>
                        <a class="btn btn-success edit" href="../spotify/edit/<%=view1[i].id%>">Edit</a>
                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../spotify/delete/<%=view1[i].id%>">Delete</a>
                    </td>-->
                            </tr>
                            <% } %>
                    </tbody>
                </table>

                <% } %>

                    <!-- if result is empty -->
                    <% if(!view1.length) { %>
                        <p class="text-center">No se encontraron resultados!</p>
                        <% } %>

        </div>
    </div>
</div>

</body>

</html>